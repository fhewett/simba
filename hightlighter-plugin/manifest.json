{
    "manifest_version": 2,
    "name": "Highlighter Plugin",
    "version": "1.0",
    "description": "Highlighter Plugin",
    "homepage_url": "https://github.com/fhewett/simba",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "48": "UI/assets/logo.png"
        },
        "default_title": "Highlight",
        "default_popup": "UI/index.html"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "purify.min.js",
                "Readability.js",
                "content.js"
            ]
        }
    ]
}